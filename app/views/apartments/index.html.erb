<h1>Welcome to Apartment Finder!</h1>

<table class="table">
  <thead>
    <tr>
      <!--<th>Latitude</th>-->
      <!--<th>Longitude</th>-->
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>Postal code</th>
      <th>State</th>
      <th>Country</th>
      <th>Owner name</th>
      <th>Contact time</th>
      <th>Owner phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <!--<td><%= apartment.latitude %></td>-->
        <!--<td><%= apartment.longitude %></td>-->
        <td><%= apartment.address1 %></td>
        <td><%= apartment.address2 %></td>
        <td><%= apartment.city %></td>
        <td><%= apartment.postal_code %></td>
        <td><%= apartment.state %></td>
        <td><%= apartment.country %></td>
        <td><%= apartment.owner_name %></td>
        <td><%= apartment.contact_time %></td>
        <td><%= apartment.owner_phone %></td>
        <td><%= link_to 'Show', apartment %></td>
        <% if apartment.user == current_user %>
          <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
          <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

