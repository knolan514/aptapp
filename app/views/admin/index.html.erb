<div class="page-header">
  <h1>Admin Page</h1>

  <h2>Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th>Change Role to Owner</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.roles.map{ |role| role.name }.join('') %></td>
          <td>
            <%= form_tag('/admin/update/' + user.id.to_s, method: :put) do %>
            <input type="submit" value="Make Owner" class="btn btn-primary">
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
